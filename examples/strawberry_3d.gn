! Title !
.OpenGSL.shape.d2 (260) (50) & shape.n = title
.OpenGSL.shape.text -u '3D Strawberries with OpenGSL' '#FFFFFF'

.OpenGSL.shape.d2 (290) (550) & shape.n = footer
.OpenGSL.shape.text -u 'Built from spheres' '#AAAAAA'

.OpenGSL.render

exit (0)
