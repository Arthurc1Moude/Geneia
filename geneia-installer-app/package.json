{
  "name": "geneia-installer",
  "version": "1.0.0",
  "description": "Modern Geneia IDE Installer with Next.js + Electron",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "npm run build:next && npm run build:electron && npm run build:cpp",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:cpp": "node-gyp rebuild",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "node-gyp": "^10.0.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "com.moude.geneia.installer",
    "productName": "Geneia Installer",
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "build/Release/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "assets/icon.png",
      "category": "Development"
    }
  }
}
