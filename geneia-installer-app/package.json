{
  "name": "geneia-installer",
  "version": "1.0.0",
  "description": "Modern Geneia IDE Installer with Next.js + Electron",
  "main": "dist-electron/main.js",
  "author": {
    "name": "Arthur Moude",
    "email": "arthur@moude.ai"
  },
  "homepage": "https://github.com/Arthurc1Moude/Geneia",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arthurc1Moude/Geneia.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "npm run build:next && npm run build:electron && npm run build:cpp",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:cpp": "node-gyp rebuild",
    "package": "npm run build && electron-builder --linux --mac --win",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "build-all": "bash build-installers.sh"
  },
  "dependencies": {
    "next": "^14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "node-gyp": "^10.0.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1"
  },
  "build": {
    "appId": "com.moude.geneia.installer",
    "productName": "Geneia Installer",
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "build/Release/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Geneia Installer"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.svg",
      "category": "Development",
      "maintainer": "Arthur Moude <arthur@moude.ai>",
      "desktop": {
        "Name": "Geneia Installer",
        "Comment": "Install Geneia Programming Language IDE",
        "Categories": "Development;IDE;",
        "Keywords": "geneia;programming;compiler;installer;"
      }
    }
  }
}
